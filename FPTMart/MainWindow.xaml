<Window x:Class="FPTMart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:FPTMart.ViewModels"
        Title="FPTMart - Hệ Thống Quản Lý Bán Hàng" 
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Header -->
                <StackPanel Grid.Row="0" Margin="20" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Store" Width="60" Height="60" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="FPTMart" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="Hệ Thống Bán Hàng" FontSize="12" Foreground="#B0B0B0" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Menu Items -->
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding MenuItems}"
                         SelectedIndex="{Binding SelectedMenuIndex}"
                         Background="Transparent"
                         BorderThickness="0"
                         Margin="0,20,0,0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="20,15"/>
                            <Setter Property="Margin" Value="5,2"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" Background="Transparent" CornerRadius="5" Margin="10,2">
                                            <ContentPresenter Margin="15,12"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource SidebarHover}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource SidebarActive}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="{Binding Icon}" Width="24" Height="24" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Title}" Foreground="White" FontSize="15" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- User Info / Logout -->
                <Border Grid.Row="2" Padding="15" BorderBrush="#3E5A7F" BorderThickness="0,1,0,0" Margin="10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Account" Width="24" Height="24" Foreground="White"/>
                            <TextBlock Text="{Binding CurrentUser.FullName, FallbackValue='Admin'}" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Command="{Binding LogoutCommand}" 
                                Content="Đăng Xuất" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Foreground="White"
                                BorderBrush="White"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" Padding="25,20" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="{Binding CurrentPageTitle}" FontSize="24" FontWeight="Medium" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dddd, dd/MM/yyyy'}" 
                                   xmlns:sys="clr-namespace:System;assembly=mscorlib"
                                   Foreground="Gray" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Border Grid.Row="1" Background="#F5F5F5" Padding="25">
                <ContentControl Content="{Binding CurrentPage}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
