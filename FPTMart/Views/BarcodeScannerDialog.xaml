<Window x:Class="FPTMart.Views.BarcodeScannerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Quét Mã Vạch" 
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E3A5F" Padding="15">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Barcode" Width="28" Height="28" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text="Quét Mã Vạch Bằng Camera" FontSize="18" FontWeight="Medium" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Camera Preview -->
        <Border Grid.Row="1" Background="Black" Margin="20,15,20,10">
            <Grid>
                <Image x:Name="CameraPreview" Stretch="Uniform"/>
                <TextBlock x:Name="NoCamera" 
                           Text="Không tìm thấy camera" 
                           Foreground="White" 
                           FontSize="16"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>
                <!-- Scan line animation -->
                <Border Height="3" Background="#4CAF50" VerticalAlignment="Center" Opacity="0.7"/>
            </Grid>
        </Border>

        <!-- Result -->
        <materialDesign:Card Grid.Row="2" Margin="20,5,20,10" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Kind="BarcodeScanner" Width="24" Height="24" Foreground="#1976D2" VerticalAlignment="Center"/>
                <TextBox x:Name="BarcodeResult" 
                         Grid.Column="1"
                         Text=""
                         FontSize="18"
                         FontWeight="Medium"
                         materialDesign:HintAssist.Hint="Đưa mã vạch vào camera..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="10,0,0,0"
                         IsReadOnly="True"/>
            </Grid>
        </materialDesign:Card>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,5,20,15">
            <Button Content="Nhập Thủ Công" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="ManualInput_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Hủy" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="Cancel_Click"
                    Margin="0,0,10,0"/>
            <Button x:Name="UseButton"
                    Content="Sử Dụng Mã Này" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#4CAF50"
                    Click="UseBarcode_Click"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
