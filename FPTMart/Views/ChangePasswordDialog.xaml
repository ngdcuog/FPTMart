<Window x:Class="FPTMart.Views.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Đổi Mật Khẩu" 
        Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="KeyChange" Width="32" Height="32" Foreground="#1976D2"/>
            <TextBlock Text="Đổi Mật Khẩu" FontSize="24" FontWeight="Medium" Margin="15,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Bạn cần đổi mật khẩu trước khi tiếp tục sử dụng hệ thống." 
                       TextWrapping="Wrap" Foreground="#666" Margin="0,0,0,20"/>
            
            <PasswordBox x:Name="OldPasswordBox"
                         materialDesign:HintAssist.Hint="Mật khẩu cũ"
                         materialDesign:HintAssist.IsFloating="True"
                         Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                         Margin="0,0,0,15"/>
            
            <PasswordBox x:Name="NewPasswordBox"
                         materialDesign:HintAssist.Hint="Mật khẩu mới"
                         materialDesign:HintAssist.IsFloating="True"
                         Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                         Margin="0,0,0,15"/>
            
            <PasswordBox x:Name="ConfirmPasswordBox"
                         materialDesign:HintAssist.Hint="Xác nhận mật khẩu mới"
                         materialDesign:HintAssist.IsFloating="True"
                         Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                         Margin="0,0,0,15"/>

            <TextBlock x:Name="ErrorText" 
                       Text="" 
                       Foreground="#D32F2F" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Buttons -->
        <Button Grid.Row="2"
                Content="ĐỔI MẬT KHẨU"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Background="#1976D2"
                Height="45"
                Click="ChangePassword_Click"/>
    </Grid>
</Window>
