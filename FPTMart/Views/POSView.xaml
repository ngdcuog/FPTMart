<UserControl x:Class="FPTMart.Views.POSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Product Search & List -->
        <Grid Grid.Column="0" Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <materialDesign:Card Grid.Row="0" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Quét barcode hoặc nhập mã sản phẩm..."
                             FontSize="16"
                             Padding="10">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchProductCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="1" 
                            Command="{Binding ScanBarcodeCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Quét mã vạch bằng camera"
                            Margin="5,0,0,0">
                        <materialDesign:PackIcon Kind="BarcodeScanner" Width="24" Height="24" Foreground="#F57C00"/>
                    </Button>
                    <Button Grid.Column="2" 
                            Command="{Binding SearchProductCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#1976D2"
                            Margin="5,0,0,0">
                        <materialDesign:PackIcon Kind="Magnify" Width="24" Height="24"/>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!-- Products Grid -->
            <materialDesign:Card Grid.Row="1" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Sản Phẩm" FontSize="16" FontWeight="Medium" Margin="0,0,0,15"/>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Products}"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Product Image -->
                                        <Border Grid.Column="0" Width="45" Height="45" CornerRadius="5" Background="#F5F5F5" Margin="0,0,10,0" ClipToBounds="True">
                                            <Image Source="{Binding ImagePath, Converter={StaticResource ProductImageConverter}}" 
                                                   Stretch="UniformToFill"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" FontWeight="Medium" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding ProductCode}" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding SellingPrice, StringFormat='{}{0:N0} đ'}" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1976D2"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,10,0"/>
                                        
                                        <Button Grid.Column="3"
                                                Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                Background="#E8F5E9"
                                                Width="36" Height="36"
                                                ToolTip="Thêm vào giỏ">
                                            <materialDesign:PackIcon Kind="CartPlus" Foreground="#388E3C"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Right: Cart & Payment -->
        <materialDesign:Card Grid.Column="1" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <materialDesign:PackIcon Kind="Cart" Width="24" Height="24" Foreground="#1976D2"/>
                    <TextBlock Text="Giỏ Hàng" FontSize="18" FontWeight="Medium" Margin="10,0,0,0"/>
                    <TextBlock Text="{Binding CartItems.Count, StringFormat=' ({0} sản phẩm)'}" Foreground="Gray" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Customer Search by Phone -->
                <Grid Grid.Row="1" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             Text="{Binding CustomerPhone, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Tìm KH theo SĐT..."
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCustomerCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="1"
                            Command="{Binding SearchCustomerCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Tìm khách hàng"
                            Margin="5,0,0,0">
                        <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20" Foreground="#1976D2"/>
                    </Button>
                    <Button Grid.Column="2"
                            Command="{Binding ClearCustomerCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Bỏ chọn khách hàng"
                            Margin="5,0,0,0">
                        <materialDesign:PackIcon Kind="Close" Width="18" Height="18" Foreground="Gray"/>
                    </Button>
                </Grid>
                
                <!-- Selected Customer Display (separate row) -->
                <TextBlock Grid.Row="2" 
                           Text="{Binding SelectedCustomer.FullName, StringFormat='KH: {0}'}" 
                           Foreground="#388E3C"
                           FontWeight="Medium"
                           Margin="0,0,0,10"
                           Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}"/>

                <!-- Cart Items -->
                <ListBox Grid.Row="3" ItemsSource="{Binding CartItems}" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="5,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ProductName}" FontWeight="Medium"/>
                                    <Button Grid.Row="0" Grid.Column="1" 
                                            Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            Width="24" Height="24">
                                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="Gray"/>
                                    </Button>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding UnitPrice, StringFormat='{}{0:N0} đ'}" Foreground="Gray"/>
                                        <TextBlock Text=" x " Foreground="Gray"/>
                                        
                                        <Button Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                Width="28" Height="28">
                                            <materialDesign:PackIcon Kind="Minus" Width="14" Height="14"/>
                                        </Button>
                                        
                                        <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                                 Width="45" 
                                                 Height="28"
                                                 FontWeight="Bold" 
                                                 FontSize="14"
                                                 Foreground="#1976D2"
                                                 Background="#E3F2FD"
                                                 BorderThickness="0"
                                                 TextAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 Margin="5,0"/>
                                        
                                        <Button Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                Width="28" Height="28">
                                            <materialDesign:PackIcon Kind="Plus" Width="14" Height="14"/>
                                        </Button>

                                        <TextBlock Text="{Binding TotalPrice, StringFormat=' = {0:N0} đ'}" 
                                                   FontWeight="Bold" Foreground="#1976D2" 
                                                   VerticalAlignment="Center" Margin="15,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Totals -->
                <Border Grid.Row="4" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,15" Margin="0,10,0,0">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <TextBlock Text="Tạm tính:" FontSize="14"/>
                            <TextBlock Text="{Binding SubTotal, StringFormat='{}{0:N0} đ'}" HorizontalAlignment="Right" FontSize="14"/>
                        </Grid>
                        <Grid Margin="0,5">
                            <TextBlock Text="Giảm giá:" FontSize="14"/>
                            <TextBlock Text="{Binding DiscountAmount, StringFormat='-{0:N0} đ'}" HorizontalAlignment="Right" FontSize="14" Foreground="#D32F2F"/>
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <TextBlock Text="TỔNG CỘNG:" FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:N0} đ'}" HorizontalAlignment="Right" FontSize="24" FontWeight="Bold" Foreground="#1976D2"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Payment Button -->
                <Button Grid.Row="5" 
                        Command="{Binding CheckoutCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#388E3C"
                        Height="50"
                        FontSize="16"
                        Margin="0,15,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CashRegister" Width="24" Height="24" VerticalAlignment="Center"/>
                        <TextBlock Text="THANH TOÁN" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
