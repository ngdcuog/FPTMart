<Window x:Class="FPTMart.Views.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding DialogTitle}" 
        Height="700" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding DialogTitle}" 
                   FontSize="22" 
                   FontWeight="Medium"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Product Code -->
                <TextBox Text="{Binding Product.ProductCode, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Mã sản phẩm *"
                         materialDesign:HintAssist.IsFloating="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <!-- Barcode with scan button -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="BarcodeTextBox" Grid.Column="0"
                             Text="{Binding Product.Barcode, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Barcode (mã vạch)"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    
                    <Button Grid.Column="1"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Quét mã vạch bằng camera"
                            Click="ScanBarcode_Click"
                            Margin="5,0,0,0">
                        <materialDesign:PackIcon Kind="BarcodeScanner" Width="24" Height="24" Foreground="#1976D2"/>
                    </Button>
                </Grid>

                <!-- Name -->
                <TextBox Text="{Binding Product.Name, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Tên sản phẩm *"
                         materialDesign:HintAssist.IsFloating="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <!-- Category -->
                <ComboBox ItemsSource="{Binding Categories}"
                          SelectedValue="{Binding Product.CategoryId}"
                          SelectedValuePath="Id"
                          DisplayMemberPath="Name"
                          materialDesign:HintAssist.Hint="Danh mục *"
                          materialDesign:HintAssist.IsFloating="True"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,0,15"/>

                <!-- Prices -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding Product.CostPrice, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Giá nhập"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <TextBox Grid.Column="2"
                             Text="{Binding Product.SellingPrice, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Giá bán *"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </Grid>

                <!-- Stock & Min Stock -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding Product.StockQuantity, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Số lượng tồn"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             IsEnabled="{Binding IsNew}"/>

                    <TextBox Grid.Column="2"
                             Text="{Binding Product.MinStockLevel, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Tồn kho tối thiểu"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </Grid>

                <!-- Case/Unit Configuration -->
                <TextBlock Text="Quy cách đóng gói" FontWeight="Medium" Margin="0,5,0,8" Foreground="#1976D2"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding Product.UnitsPerCase, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="SL/Thùng *"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <TextBox Grid.Column="2"
                             Text="{Binding Product.CaseUnit, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="ĐV Nhập (Thùng)"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <TextBox Grid.Column="4"
                             Text="{Binding Product.Unit, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="ĐV Bán (Lon)"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </Grid>
                
                <TextBlock Text="VD: 24 Lon/Thùng → Nhập 10 thùng = 240 lon trong kho" 
                           Foreground="Gray" FontSize="11" Margin="0,-10,0,15" FontStyle="Italic"/>

                <!-- Product Image -->
                <TextBlock Text="Ảnh sản phẩm" FontWeight="Medium" Margin="0,0,0,8"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Image Preview -->
                    <Border Grid.Column="0" 
                            Width="100" Height="100" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="5"
                            Background="#F5F5F5">
                        <Grid>
                            <Image x:Name="ProductImage" 
                                   Stretch="Uniform"
                                   Margin="5"/>
                            <materialDesign:PackIcon Kind="Image" 
                                                      Width="40" Height="40" 
                                                      Foreground="#BDBDBD"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      x:Name="ImagePlaceholder"/>
                        </Grid>
                    </Border>

                    <!-- Image Actions -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                        <Button Content="Chọn Ảnh" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Click="SelectImage_Click"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Left"/>
                        <Button Content="Xóa Ảnh" 
                                Style="{StaticResource MaterialDesignOutlinedSecondaryButton}"
                                Click="RemoveImage_Click"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>

                <!-- Description -->
                <TextBox Text="{Binding Product.Description, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Mô tả"
                         materialDesign:HintAssist.IsFloating="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="70"
                         VerticalContentAlignment="Top"
                         Margin="0,0,0,15"/>

                <!-- Active -->
                <CheckBox Content="Đang kinh doanh"
                          IsChecked="{Binding Product.IsActive}"
                          FontSize="14"
                          Margin="0,0,0,10"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#D32F2F" 
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Hủy"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding CancelCommand}"
                    Margin="0,0,10,0"
                    Width="100"/>
            <Button Content="Lưu"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#1976D2"
                    Command="{Binding SaveCommand}"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
