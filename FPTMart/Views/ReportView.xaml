<UserControl x:Class="FPTMart.Views.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter Bar -->
        <materialDesign:Card Grid.Row="0" Padding="15" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <DatePicker SelectedDate="{Binding StartDate}"
                            materialDesign:HintAssist.Hint="Từ ngày"
                            Width="150"
                            Margin="0,0,15,0"/>
                <DatePicker SelectedDate="{Binding EndDate}"
                            materialDesign:HintAssist.Hint="Đến ngày"
                            Width="150"
                            Margin="0,0,15,0"/>
                <Button Command="{Binding LoadReportCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#1976D2">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center"/>
                        <TextBlock Text="Xem Báo Cáo" Margin="8,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </materialDesign:Card>

        <!-- Summary Cards -->
        <UniformGrid Grid.Row="1" Rows="1" Columns="4" Margin="0,0,0,15">
            <!-- Total Revenue -->
            <materialDesign:Card Margin="0,0,15,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#E3F2FD" CornerRadius="8" Padding="10">
                            <materialDesign:PackIcon Kind="CurrencyUsd" Width="24" Height="24" Foreground="#1976D2"/>
                        </Border>
                        <TextBlock Text="Tổng Doanh Thu" Foreground="Gray" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="{Binding TotalRevenue, StringFormat='{}{0:N0} đ'}" FontSize="26" FontWeight="Bold" Margin="0,12,0,0" Foreground="#1976D2"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Total Orders -->
            <materialDesign:Card Margin="0,0,15,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#E8F5E9" CornerRadius="8" Padding="10">
                            <materialDesign:PackIcon Kind="Receipt" Width="24" Height="24" Foreground="#388E3C"/>
                        </Border>
                        <TextBlock Text="Số Đơn Hàng" Foreground="Gray" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="{Binding TotalOrders}" FontSize="26" FontWeight="Bold" Margin="0,12,0,0" Foreground="#388E3C"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Average Order -->
            <materialDesign:Card Margin="0,0,15,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#FFF3E0" CornerRadius="8" Padding="10">
                            <materialDesign:PackIcon Kind="Calculator" Width="24" Height="24" Foreground="#F57C00"/>
                        </Border>
                        <TextBlock Text="TB/Đơn" Foreground="Gray" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="{Binding AverageOrderValue, StringFormat='{}{0:N0} đ'}" FontSize="26" FontWeight="Bold" Margin="0,12,0,0" Foreground="#F57C00"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Products Sold -->
            <materialDesign:Card Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#F3E5F5" CornerRadius="8" Padding="10">
                            <materialDesign:PackIcon Kind="Package" Width="24" Height="24" Foreground="#7B1FA2"/>
                        </Border>
                        <TextBlock Text="SP Đã Bán" Foreground="Gray" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="{Binding TotalProductsSold}" FontSize="26" FontWeight="Bold" Margin="0,12,0,0" Foreground="#7B1FA2"/>
                </StackPanel>
            </materialDesign:Card>
        </UniformGrid>

        <!-- Content Grid -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Sales History -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,15,0" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Lịch Sử Đơn Hàng" FontSize="18" FontWeight="Medium" Margin="0,0,0,15"/>

                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Sales}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã HĐ" Binding="{Binding InvoiceNumber}" Width="130"/>
                            <DataGridTextColumn Header="Ngày" Binding="{Binding SaleDate, StringFormat='dd/MM/yyyy HH:mm'}" Width="140"/>
                            <DataGridTextColumn Header="Khách Hàng" Binding="{Binding CustomerName, TargetNullValue='Khách lẻ'}" Width="*"/>
                            <DataGridTextColumn Header="Tổng Tiền" Binding="{Binding TotalAmount, StringFormat='{}{0:N0} đ'}" Width="120"/>
                            <DataGridTemplateColumn Header="Trạng Thái" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" Padding="8,3" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#E8F5E9"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#388E3C"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                <Setter Property="Foreground" Value="#D32F2F"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

            <!-- Top Products -->
            <materialDesign:Card Grid.Column="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Sản Phẩm Bán Chạy" FontSize="18" FontWeight="Medium" Margin="0,0,0,15"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding TopProducts}" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="5,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="#1976D2" CornerRadius="15" Width="26" Height="26">
                                            <TextBlock Text="{Binding Rank}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="10,0">
                                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding ProductCode}" Foreground="Gray" FontSize="11"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding QuantitySold, StringFormat='Bán: {0}'}" FontWeight="Medium" Foreground="#388E3C"/>
                                            <TextBlock Text="{Binding Revenue, StringFormat='{}{0:N0} đ'}" Foreground="Gray" FontSize="11"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
