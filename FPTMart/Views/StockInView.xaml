<UserControl x:Class="FPTMart.Views.StockInView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <TabControl SelectedIndex="{Binding SelectedTabIndex}" Style="{StaticResource MaterialDesignFilledTabControl}">
        
        <!-- Tab 1: Nhập Kho -->
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="PackageDown" VerticalAlignment="Center"/>
                    <TextBlock Text="Nhập Kho" Margin="8,0,0,0"/>
                </StackPanel>
            </TabItem.Header>
            
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="350"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Product Selection -->
                <Grid Grid.Column="0" Margin="0,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <materialDesign:Card Grid.Row="0" Padding="15" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Tìm sản phẩm để nhập kho..."
                                     FontSize="14">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            <Button Grid.Column="1" 
                                    Command="{Binding SearchCommand}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Margin="10,0,0,0">
                                <materialDesign:PackIcon Kind="Magnify"/>
                            </Button>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Products -->
                    <materialDesign:Card Grid.Row="1" Padding="15">
                        <DataGrid ItemsSource="{Binding Products}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Mã SP" Binding="{Binding ProductCode}" Width="80"/>
                                <DataGridTextColumn Header="Tên Sản Phẩm" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Tồn" Binding="{Binding StockQuantity}" Width="60"/>
                                <DataGridTemplateColumn Header="Thêm" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding DataContext.AddToStockInCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Thêm vào phiếu nhập"
                                                    Width="32" Height="32">
                                                <materialDesign:PackIcon Kind="Plus" Foreground="#388E3C" Width="20" Height="20"/>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </materialDesign:Card>
                </Grid>

                <!-- Right: Stock In Form -->
                <materialDesign:Card Grid.Column="1" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="TruckDelivery" Width="24" Height="24" Foreground="#F57C00"/>
                            <TextBlock Text="Phiếu Nhập Kho" FontSize="18" FontWeight="Medium" Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Supplier Selection -->
                        <ComboBox Grid.Row="1"
                                  ItemsSource="{Binding Suppliers}"
                                  SelectedItem="{Binding SelectedSupplier}"
                                  DisplayMemberPath="Name"
                                  materialDesign:HintAssist.Hint="Chọn nhà cung cấp"
                                  materialDesign:HintAssist.IsFloating="True"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,0,0,15"/>

                        <!-- Stock In Items -->
                        <ListBox Grid.Row="2" ItemsSource="{Binding StockInItems}" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="5,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Row="0" Grid.Column="0">
                                                <TextBlock Text="{Binding ProductName}" FontWeight="Medium"/>
                                                <TextBlock Text="{Binding CaseInfo}" Foreground="Gray" FontSize="11"/>
                                            </StackPanel>
                                            <Button Grid.Row="0" Grid.Column="1" 
                                                    Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Width="24" Height="24">
                                                <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="Gray"/>
                                            </Button>

                                            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,8,0,0">
                                                <TextBox Text="{Binding CaseQuantity, UpdateSourceTrigger=PropertyChanged}"
                                                         Width="60"
                                                         materialDesign:HintAssist.Hint="Thùng"
                                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                         Padding="5"/>
                                                <TextBlock Text="{Binding CaseUnit}" VerticalAlignment="Center" Margin="8,0,15,0" Foreground="Gray"/>
                                                <TextBox Text="{Binding CostPrice, UpdateSourceTrigger=PropertyChanged}"
                                                         Width="100"
                                                         materialDesign:HintAssist.Hint="Giá/Thùng"
                                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                         Padding="5"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" 
                                                       Text="{Binding ConversionDisplay}" 
                                                       Foreground="#388E3C" 
                                                       FontWeight="Medium"
                                                       Margin="0,5,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Totals -->
                        <Border Grid.Row="3" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,15" Margin="0,10,0,0">
                            <Grid>
                                <TextBlock Text="TỔNG TIỀN NHẬP:" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:N0} đ'}" 
                                           HorizontalAlignment="Right" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#F57C00"/>
                            </Grid>
                        </Border>

                        <!-- Save Button -->
                        <Button Grid.Row="4"
                                Command="{Binding SaveStockInCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#F57C00"
                                Height="45"
                                FontSize="14"
                                Margin="0,15,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center"/>
                                <TextBlock Text="LƯU PHIẾU NHẬP" Margin="10,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </TabItem>
        
        <!-- Tab 2: Lịch Sử Nhập Kho -->
        <TabItem>
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="History" VerticalAlignment="Center"/>
                    <TextBlock Text="Lịch Sử" Margin="8,0,0,0"/>
                </StackPanel>
            </TabItem.Header>
            
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ClipboardList" Width="28" Height="28" Foreground="#F57C00" VerticalAlignment="Center"/>
                        <TextBlock Text="Lịch Sử Nhập Kho" FontSize="20" FontWeight="Medium" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button HorizontalAlignment="Right"
                            Command="{Binding LoadHistoryCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#F57C00">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center"/>
                            <TextBlock Text="Tải lại" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
                
                <!-- History Table -->
                <materialDesign:Card Grid.Row="1" Padding="15">
                    <DataGrid ItemsSource="{Binding StockInHistory}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã Phiếu" Binding="{Binding StockInNumber}" Width="120"/>
                            <DataGridTextColumn Header="Nhà Cung Cấp" Binding="{Binding SupplierName}" Width="*"/>
                            <DataGridTextColumn Header="Ngày Nhập" Binding="{Binding StockInDate, StringFormat='dd/MM/yyyy HH:mm'}" Width="140"/>
                            <DataGridTextColumn Header="Số Thùng" Binding="{Binding TotalCases}" Width="70"/>
                            <DataGridTextColumn Header="Tổng Tiền" Binding="{Binding TotalAmount, StringFormat='{}{0:N0} đ'}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#F57C00"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </materialDesign:Card>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
